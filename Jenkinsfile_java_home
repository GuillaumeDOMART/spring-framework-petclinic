pipeline {
    agent any
    tools {
        // Install the Maven version configured as "Maven3.9.12" and add it to the path.
        maven "Maven3.9.12"
        jdk 'Corretto-17'
    }

    stages {
        stage('Initialize JDK') {
            steps {
                // Verify the environment
                sh 'echo "JAVA_HOME=$JAVA_HOME"'
                sh 'java -version'

                // Run Maven
                sh 'mvn clean package'
            }
        }
    }
}
